@using FidelityPension.Utility
@using Microsoft.AspNet.Identity.Owin
@using FidelityPension.Helper
@model FidelityPension.Models.Core.Employee

@{
    ViewBag.Title = "Avc Subscription";
    Layout = "~/Areas/iPension/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Avc Subscription</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Client Portal</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Avc Form</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Avc Subscription <small></small></h5>
                    @*<a class="hidden-print">
                            <i class="fa fa-print pull-right" style="margin-right:80px" onclick="myFunction()"></i>
                        </a>*@
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">


                                <img src="~/Content/Template/assets/img/Avc.PNG" class="center-orientation" />
                                <fieldset>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <br />
                                            <label>Pin</label><span style="color: #ff0000">*</span>
                                            @Html.TextBoxFor(model => model.RSAPin, new { @class = "form-control", placeholder = "PEN", @required = "required" })
                                            @Html.ValidationMessageFor(model => model.RSAPin, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>Surname</label><span style="color: #ff0000">*</span>
                                            @Html.TextBoxFor(m => m.SURNAME, new { @class = "form-control", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.SURNAME, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>First Name</label><span style="color: #ff0000">*</span>
                                            @Html.TextBoxFor(m => m.FIRSTNAME, new { @class = "form-control", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.FIRSTNAME, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>Name Of Employer</label><span style="color: #ff0000">*</span>
                                            @*@Html.DropDownList("EmpoyerName", null, new { @class = "form-control", type = "text", @required = "required" })*@

                                            @*@Html.DropDownList("EmpoyerName", null, new { @class = "js-example-basic-single", @required = "required" })*@


                                            @Html.TextBoxFor(m => m.EMPLOYER_FULLNAME, new { @class = "form-control", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.EMPLOYER_FULLNAME, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>Staff ID</label><span style="color: #ff0000">*</span>
                                            @*@Html.DropDownList("EmpoyerName", null, new { @class = "form-control", type = "text", @required = "required" })*@

                                            @*@Html.DropDownList("EmpoyerName", null, new { @class = "js-example-basic-single", @required = "required" })*@


                                            @Html.TextBoxFor(m => m.EMPLOYER_FULLNAME, new { @class = "form-control", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.EMPLOYER_FULLNAME, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>I wish to make the following contribution towards my retirement</label><span style="color: #ff0000">*</span>
                                            @*@Html.DropDownList("EmpoyerName", null, new { @class = "form-control", type = "text", @required = "required" })*@

                                            @*@Html.DropDownList("EmpoyerName", null, new { @class = "js-example-basic-single", @required = "required" })*@


                                            @Html.TextBoxFor(m => m.EMPLOYER_FULLNAME, new { @class = "form-control", @required = "required", type = "number" })
                                            @Html.ValidationMessageFor(m => m.EMPLOYER_FULLNAME, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group" id="data_1">
                                        <div class="col-md-10">
                                            <label>Commencement Date</label>
                                            <div class="input-group date">
                                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.TextBoxFor(m => m.Date_Of_First_Appointment, new { @class = "form-control", placeholder = "Enter Details" })
                                                @Html.ValidationMessageFor(m => m.Date_Of_First_Appointment, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>Frequency Of Contribution</label><span style="color: #ff0000">*</span>
                                            @Html.DropDownListFor(m => m.RSAStatusId, AllHelpers.Frequency(), "-- Select --", new { @class = "form-control", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.RSAStatusId, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @*@if (string.IsNullOrEmpty(ViewBag.Signatur_url))
                                            {
                                                <img id="signature" src="~/Content/Template/assets/img/avator/signature_image.png" width="150" height="150" />
                                            }
                                            else
                                            {
                                                <img id="signature" src="@Url.Content("~"+ViewBag.Signatur_url )" width="150" height="150" />

                                            }*@
                                        <div class="col-md-4">
                                            <img id="signature" src="~/Content/Template/assets/img/avator/signature_image.jpg" width="150" height="150" />
                                            <input type="file" name="SignatureFileBase" id="FileBase2" accept=".jpg,.png,.jpeg" required onchange="showMyImage(this, 'signature')">
                                            <label>upload signature</label><span style="color: #ff0000">*</span>
                                            <label style="color: #ff0000">(File size should not exceed 1mb)</label>
                                        </div>
                                    </div>
                                    <img src="~/Content/Template/assets/img/Avc_Footer.PNG" />
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {

    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/select2Styles")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")

    @*<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />




}

@section Scripts {


    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/select2")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            // $('#myModal5').modal({ show: true });
            $('#data_1 .input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });
        });
    </script>

    <script>
        function myFunction() {
            window.print();
        }


    </script>
}






