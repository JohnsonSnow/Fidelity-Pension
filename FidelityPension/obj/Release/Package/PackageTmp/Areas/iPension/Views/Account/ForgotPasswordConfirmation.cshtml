@{
    ViewBag.Title = "Forgot Password Confirmation";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Fidelity pension Managers | Forgot your password confirmation</title>

    <link href="~/Areas/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Areas/Content/animate.css" rel="stylesheet">
    <link href="~/Areas/Content/style.css" rel="stylesheet">

</head>

<body class="white-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name"></h1>

            </div>
            <h3 style="color: #15332b">iPension - Employee Portal</h3>
            <p style="color: #a6ce39">
                Forgot Password Response
            </p>
            @if (ViewBag.Success != null)
            {
                <p>
                    <strong> @ViewBag.Success </strong>
                </p>
                <p>Click Here to <a href="~/iPension/Account/EmployeeLogin">Login</a></p>
            }

            @if (ViewBag.error != null)
            {
                <p>
                    <strong> @ViewBag.error </strong>
                </p>
                <p><a href="~/iPension/Account/IPensionForgotPassword">Try Again</a></p>
            }
            
            <p class="m-t"> <small>Fidelity Pension Managers &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

</body>

</html>




















